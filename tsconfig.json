{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true,
    "lib": ["es2017"],
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["node", "jest"],
    "paths": {
      "#*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "jest.*.ts"],
  "include": ["src/**/*"]
}
